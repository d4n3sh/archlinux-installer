#!/usr/bin/env bash

domain="d4n3sh.com"
hostname="r2d2"
ucode="intel-ucode"

# Set the time zone
ln -sf /usr/share/zoneinfo/America/Chicago /etc/localtime
ls -l /etc/localtime

# Set the system clock
hwclock --systohc
hwclock

# Set locale
sed -i 's/^#en_US.UTF-8 UTF-8/en_US.UTF-8 UTF-8/g' /etc/locale.gen
cat /etc/locale.gen | grep -e 's/^en_US.UTF-8 UTF-8'
locale-gen

echo "LANG=en_US.UTF-8" > /etc/locale.conf
cat /etc/locale.conf

cat <<EOF > /etc/hostname
${hostname}
EOF

cat <<EOF > /etc/hosts
# Static table lookup for hostnames.
# See hosts(5) for details.
127.0.0.1	localhost
::1		localhost
127.0.1.1	${hostname}.${domain}	${hostname}
EOF

# Use the nearest mirrors
pacman -Sy reflector --noconfirm
reflector --country "US" --latest 15 --protocol https --sort rate --save /etc/pacman.d/mirrorlist

# Install Network Manager
pacman -S networkmanager --noconfirm
systemctl enable NetworkManager

# Install microcode
pacman -S "${ucode}" --noconfirm

# Include encrypt module during boot
sed -i '/^HOOKS=/s/)$/ encrypt)/' /etc/mkinitcpio.conf

# Generate the initramfs
mkinitcpio -P

# Setup bootloader
pacman -S efibootmgr --noconfirm
bootctl install

cat <<EOF > /boot/loader/loader.conf
timeout 0
default archlinux
EOF

cat <<EOF > /boot/loader/entries/archlinux.conf
title Arch Linux
linux /vmlinuz-linux
initrd /${ucode}.img
initrd /initramfs-linux.img
options cryptdevice=PARTLABEL=OS:OSCRYPT root=LABEL=OS rootflags=subvol=root quiet rw
EOF

# Add users
echo "Adding users"
useradd -m -G wheel danesh
passwd danesh

# Update the sudeoers file
echo "Enabling sudo for users"
sed -i 's/^#.%wheel.ALL=(ALL).ALL$/%wheel ALL=(ALL) ALL/' /etc/sudoers

# Disable root
echo "Disabling the root account"
passwd -l root